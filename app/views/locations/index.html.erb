<% @page_header = "Locations" %>

<p id="notice"><%= notice %></p>

<h1>Listing Locations</h1>
<div class="container">
<table class="table table-bordered table-condensed">
  <thead class= "head">
    <tr>
      <th>Name</th>
      <th>Physical address</th>
      <th>Mailing address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Major intersections</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.physical_address %></td>
        <td><%= location.mailing_address %></td>
        <td><%= location.city %></td>
        <td><%= location.state %></td>
        <td><%= location.zip %></td>
        <td><%= location.major_intersections %></td>
        
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Location', new_location_path %>


 <div class="page_info">
      <%= page_entries_info @locations %>
    </div>
<%= will_paginate @locations, :renderer => BootstrapPagination::Rails  %>

